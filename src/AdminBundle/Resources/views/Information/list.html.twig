{% extends "AdminBundle::layout.html.twig" %}

{% block content %}
    <a href="{{ path('admin_information_new') }}">New information</a>
    <table>
        {% for information in informations %}
            <tr>
                <td><a href="{{ path("admin_information_edit", {id: information.id}) }}">{{information.id}}</a></td>
                <td>{{information.title}}</td>
                <td>{{information.description}}</td>
                <td><a href="{{ path("admin_information_delete", {id: information.id}) }}">delete</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}