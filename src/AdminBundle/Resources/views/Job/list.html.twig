{% extends "AdminBundle::layout.html.twig" %}

{% block content %}
    <a href="{{ path('admin_job_new') }}">New Job</a>
    <table>
        {% for job in jobs %}
            <tr>
                <td><a href="{{ path("admin_job_edit", {id: job.id}) }}">{{job.id}}</a></td>
                <td>{{job.position}}</td>
                <td>{{job.email}}</td>
                <td>{{job.created|date("Y-m-d")}}</td>
                <td><a href="{{ path("admin_job_delete", {id: job.id}) }}">delete</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}