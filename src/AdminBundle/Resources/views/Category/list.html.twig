{% extends "AdminBundle::layout.html.twig" %}

{% block content %}
    <a href="{{ path('admin_category_new') }}">New Category</a>
    <table>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path("admin_category_edit", {id: category.id}) }}">{{category.name}}</a></td>
                <td>{{category.createdAt|date("Y-m-d H:i:s")}}</td>
                <td><a href="{{ path("admin_category_delete", {id: category.id}) }}">delete</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}